        <span class="icon rollable justify-self-start" data-key="weapon" data-weapon="{{item.name}}"
          data-item-id="{{item._id}}" data-test="{{item.name}}" data-skill="{{item.system.skill}}">
          <img src="{{item.img}}" alt="{{item.name}}" title="{{item.name}}" width="25" height="25" /></span>
