    <div class="weapons">
      <h2 class="subheader border-bottom border-left t m-0 p-1">Weapons <a
                  title="{{localize " twdu.ui.add"}}" class="add-item" data-type="weapon">
                  &#43;</a></h2>
      <h4 class="group-header m-0 pi-1">Equiped Weapons</h4>
      <div class="group-header grid six-col justify pi-1">
        <span class="icon">{{localize "twdu.ui.icon"}}</span>
        <span class="group-name">{{localize "twdu.name"}}</span>
        <span class="group-weight">Weight</span>
        <span class="bonus">Skill</span>
        <span class="equip">Equip/Store</span>
        <span class="actions">Actions</span>
