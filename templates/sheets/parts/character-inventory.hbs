        <span class="skill justify-self-center">{{localize 'twdu.skill'}}</span>
        <span class="equip justify-self-center">{{localize 'twdu.equipStore'}}</span>
        <span class="actions justify-self-end">{{localize 'twdu.actions'}}</span>
