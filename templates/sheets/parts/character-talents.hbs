<div class="container w-100">
  <div class="flex-col" >
    <div class="talents flex-col margin grow">
      <div class="group-header talent grid four-col center light-border w-100 p-1">
        <b class="icon justify-self-start">{{localize "twdu.ui.icon"}}</b>
        <b class="name justify-self-start">{{localize "twdu.talent"}}</b>
        <b class="description justify-self-start">{{localize "twdu.description"}}</b>
        <a class="button add-item justify-self-end pi-3" title='{{localize  "twdu.ui.add"}}' data-type="talent"><i
            class="fas fa-plus"></i></a>
      </div>
      <div class="scrollable flex-col">
        {{#each items as |item|}}
        {{#if item.isTalent}}
        <div class="talent item grid four-col center align-center w-100 border-bottom" data-item-id="{{item._id}}">
          <div class="icon justify-self-start pi-1"><img class="icon" src="{{item.img}}" title="{{item.name}}" height="25" width="25" /></div>
          <div class="name justify-self-start show-details pi-1">{{item.name}}</div>
          <div class="description justify-self-start max-w-200-hidden overflow-ellipsis pi-1">{{item.system.description}}</div>
          <div class="button justify-self-end pi-2">
            <a class="item-control to-chat" title='{{localize "twdu.ui.chat"}}'><i class="fas fa-comment"></i></a>
            <a class="item-control item-edit" title='{{localize  "twdu.ui.edit"}}'><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title='{{localize  "twdu.ui.delete"}}'><i class="fas fa-trash"></i></a>
          </div>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</div>