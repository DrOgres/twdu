<div class="container w-100">
  <div class="flex-col" >
    <div class="talents flex-col margin grow">
      <div class="group-header talent grid four-col center light-border w-100">
        <b class="icon">{{localize "twdu.ui.icon"}}</b>
        <b class="name">{{localize "twdu.talent"}}</b>
        <b class="description">{{localize "twdu.description"}}</b>
        <a class="button add-item" title='{{localize  "twdu.ui.add"}}' data-type="talent"><i
            class="fas fa-plus"></i></a>
      </div>
      <div class="scrollable flex-col">
        {{#each items as |item|}}
        {{#if item.isTalent}}
        <div class="talent item grid four-col center align-center w-100 border-bottom" data-item-id="{{item._id}}">
          <div class="icon"><img class="icon" src="{{item.img}}" title="{{item.name}}" height="25" width="25" /></div>
          <div class="name">{{item.name}}</div>
          <div class="description">{{item.system.description}}</div>
          <div class="button">
            <a class="item-control to-chat" title='{{localize "twdu.ui.chat"}}'><i class="fas fa-comment"></i></a>
            <a class="item-control item-edit" title='{{localize  "twdu.ui.edit"}}'><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title='{{localize  "twdu.ui.delete"}}'><i class="fas fa-trash"></i></a>
          </div>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</div>