<div class="notes-container">

      <div class="flex column heavy-border wrapper" style="width: 99%;">
        <b class="title" style="width: 85%; margin: auto;">{{localize "HEADER.TALENTS"}}</b>
        <div class="talents flex column margin grow">
            <div class="talent grid grid-4col-fr center light-border w-100">
                <b class="icon">{{localize "TALENT.ICON"}}</b>
                <b class="name">{{localize "TALENT.NAME"}}</b>
                <b class="description">{{localize "TALENT.DESCRIPTION"}}</b>
                <a class="button item-create" title='{{localize  "UI.ADD"}}' data-type="talent"><i class="fas fa-plus"></i></a>
            </div>
            <div class="scrollable">
                {{#each items as |item|}}
                    {{#if item.isTalent}}
                        <div class="talent item grid grid-4col-fr center align-center w-100" data-item-id="{{item._id}}">
                            <div class="icon"><img class="icon" src="{{item.img}}" title="{{item.name}}" height="50" width="50"/></div>
                            <div class="name">{{item.name}}</div>
                            <div class="description">{{item.system.description}}</div>
                            <div class="button">
                                <a class="item-control to-chat" title='{{localize UI.CHAT}}'><i class="fas fa-comment"></i></a>
                                <a class="item-control item-edit" title='{{localize  "UI.EDIT"}}'><i class="fas fa-edit"></i></a>
                                <a class="item-control item-delete" title='{{localize  "UI.DELETE"}}'><i class="fas fa-trash"></i></a>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>

  <h3>{{localize "twdu.notes"}}</h3>
  <div class="notes full-size">
     {{editor notesHTML target="system.notes.value" button=true owner=owner editable=editable }}


   
  </div>
</div>