<form class="{{cssClass}}" autocomplete="off">
  <header class="item-header sheet-header">
    <img
      src="{{item.img}}"
      data-edit="img"
      title="{{item.name}}"
      class="item-img"
      height="64"
      width="64"
    />
    <h1><input
        name="name"
        type="text"
        value="{{item.name}}"
        placeholder="Name"
      /></h1>
  </header>
  <div class="grid-span-2">
    <b>{{localize "twdu.description"}}</b>
    <textarea name="system.description">{{data.system.description}}</textarea>
  </div>

</form>