<form class="{{cssClass}} flexcol" autocomplete="off">
  {{! Item Sheet Header }}
  <div class="flex-row flex-start">
    <div class="header w-150p group">
      <img src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    </div>

    <div class="w-100">
      <div class="flexcol group">
        <h1 class="center">{{localize "twdu.issue"}}
          <input class="light" name="name" type="text" value="{{item.name}}" style="width: 99%;" />
        </h1>
        {{!-- TODO make a check box to toggle secret status --}}
        <div class="secret flexrow">{{localize "twdu.secret"}}: 
          {{#if item.system.isSecret}}
          <div class='toggle-boolean' title="{{localize "twdu.isSecret"}}" data-path='isSecret'><i class='fa-solid fa-eye-slash'></i></div>
          {{else}}
          <div class='toggle-boolean' title="{{localize "twdu.isNotSecret"}}" data-path='isSecret'><i class='fa-solid fa-eye'></i></div>
          {{/if}}
        </div>
        
      </div>
      <div class="grid two-col w-100 group">

        <div class="span-2">
          <b>{{localize "twdu.description"}}</b>
          <textarea name="system.description">{{data.system.description}}</textarea>
        </div>
        <div class="span-2">
          <b>{{localize "twdu.source"}}</b>
          
          <input class="light" name="system.source" type="text" value="{{data.system.source}}" style="width: 99%;" />
          
        </div>
      </div>
    </div>
  </div>
</form>