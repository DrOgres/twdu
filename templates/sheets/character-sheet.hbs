<form class="{{cssClass}}" autocomplete="off">
  {{!-- Sheet Header --}}
  <header class="actor-header flex-row gap-sm">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.img}}" style="width: 175px; height: 175px;" />
    <div class="group flex-col">
    <h1 class="input name"><input name="name" type="text" value="{{actor.name}}" placeholder="{{localize 'twdu.name'}}" /></h1>
    <h2 class="flex-row"><label>{{localize 'twdu.archetype'}}</label><input name="archetype" type="text" value="{{actor.system.archetype}}" placeholder="{{localize 'twdu.archetype'}}" /> </h2>
    <h2 class="flex-row"><label>{{localize 'twdu.description'}}</label><textarea name="description" value="{{actor.system.description}}"></textarea> </h2>
    
    </div>
    <div class="group flex-col">
      <h3><label>{{localize 'twdu.pcAnchor'}}</label><input name="pcAnchor" type="text" value="{{actor.system.pcAnchor}}" placeholder="{{localize 'twdu.pcAnchor'}}" /> </h3>
      <h3><label>{{localize 'twdu.npcAnchor'}}</label><input name="npcAnchor" type="text" value="{{actor.system.npcAnchor}}" placeholder="{{localize 'twdu.npcAnchor'}}" /> </h3>
      <h3><label>{{localize 'twdu.drive'}}</label><input name="pcAnchor" type="text" value="{{actor.system.drive}}" placeholder="{{localize 'twdu.drive'}}" /> 
                  <input type="checkbox" value="{{actor.system.driveUsed}}" /></h3>
      
    </div>    
    
  </header>


        {{!-- Attributes and Skills --}}
        <div class="abilities grid four-col">
          <div class="header span-4">
            <h2>{{localize 'twdu.headerAttributes'}}</h2>
          </div>
           {{#each actor.system.attributes as |attr key|}}
            {{#if key}}
            <div class="att-group group" id="{{key}}">
            <div class="attribute">
            <h3>{{localize (TWDUconcat 'twdu.' attr.label )}}</h3>
            <input type="text" name="system.attributes.{{key}}.value" value="{{attr.value}}" data-dtype="Number" />
            </div>
            {{#skillBlock key ../actor.system.skills}}
            {{/skillBlock}}
            </div>
            {{/if}}
          {{/each}}
        </div>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="main">{{localize 'twdu.general'}}</a>
    <a class="item" data-tab="inventory">{{localize 'twdu.inventory'}}</a>
    <a class="item" data-tab="bioNotes">{{localize 'twdu.bioNotes'}}</a>
  </nav>


  {{!-- Sheet Body --}}
  <section class="sheet-body">
    
    <div class="tab" data-group="primary" data-tab="main">
      {{> systems/twdu/templates/sheets/parts/character-main.hbs}}
    </div>


    {{!-- Biography Tab --}}
    <div class="tab biog-full " data-group="primary" data-tab="bioNotes">
      {{> systems/twdu/templates/sheets/parts/character-notes.hbs}}
    </div>
  
    <!-- INVENTORY -->
    <div class="tab inventory" data-group="primary" data-tab="inventory">
      {{> systems/twdu/templates/sheets/parts/character-inventory.hbs}}
    </div>

  </section>
</form>