<form class="{{cssClass}} flex-col color-brown-700 bg-offwhite " autocomplete="off">
  <div class="flex-row flex-start">

    <div class="header w-150p">
      <img class="border-none" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    </div>

    <div class="w-100 padding-sm">
      <div class="flex-col">
        <h1 class="center">{{localize "twdu.name"}} :
          <input class="light" name="name" type="text" value="{{item.name}}" />
        </h1>
        <br />

      </div>
      <div class="grid grid-3col-fr center gap-sm h-100">
      <div class="flex-row center">
          <b>{{localize "twdu.protection"}}:&nbsp;</b>
          <input class="light" name="system.protection" type="text" value="{{data.system.protection}}" />
        </div>
        <div class="flex-row center">
          <b>{{localize "twdu.agilityPenalty"}}</b>
          <input class="light" name="system.agility" type="text" value="{{data.system.agility}}" />
        </div>
      </div>
    </div>
  </div>
</form>