<div class="card-holder flex-row w-100" style="position: relative;">
    <div class="roll-token m-0 p-1 group header">
        <img src={{token}} width="45" class="roll-token" />
    </div>
    <div class="flex-col w-100">
        <div class='chat-flavor text-center header mi-1 group'>{{name}} </div>
        <div class='flex-row center group pi-1 mi-1'>
            <img src={{img}} width=50 height=50 />
        </div>
        <div class='chat-item-info grid pi-1 w-100'>
            <div class="grid col-70-30 group subheader middle">
                <div class="justify-self-start pi-1"> {{localize "twdu.lethal"}}: </div>
                <div class="border-left justify-self-center pi-1 w-100">
                    {{#if system.fatal}}
                    {{localize "twdu.yes"}}
                    {{/if}}
                    {{#unless system.fatal}}
                    {{localize "twdu.no"}}
                    {{/unless}}
                </div>
            </div>
            <div class="grid col-70-30 group subheader middle">
                <div class="justify-self-start pi-1">{{localize "twdu.timeLimit"}}:</div>
                <div class="border-left justify-self-center pi-1 w-100"> 
                    {{localize system.timeLimit}}-{{system.complexity}}
                 </div>
            </div>

            <div class="grid col-70-30 group subheader middle">
                <div class="justify-self-start pi-1">
                    {{localize "twdu.recoveryTime"}}:
                </div> 
                <div class="border-left justify-self-center pi-1 w-100">  
                    {{localize system.recovery}} 
                </div>
            </div>
            <div class="grid col-70-30 group subheader middle">
                <div class="justify-self-start pi-1">
                    {{localize "twdu.penalty"}}:
                </div> 
                <div class="border-left justify-self-center pi-1 w-100">
                    {{system.effect}} 
                </div>
            </div>

           <div class="flex-col group middle">
                <div class="justify-self-start pi-1 subheader w-100 text-center border-bottom">{{localize 'twdu.description'}}</div>
                <div class=" justify-self-center pi-1">{{system.description}}</div>
            </div>
        </div>
    </div>
</div>