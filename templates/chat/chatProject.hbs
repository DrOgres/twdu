<div class="card-holder flex-row w-100" style="position: relative;">
    <div class="roll-token">
        <img src={{token}} width="45" class="roll-token" />
    </div>
    <div class='chat-flavor'> {{name}} </div>
    <div class='flex row center'><img src={{img}} width=50 height=50 /></div>

    <div class='chat-item-info gr\id two-col'>
        <b>{{localize "twdu.effect"}}: </b><span class="title-case">{{system.effect.type}}
            &plus;{{system.effect.value}}</span></br>
        <b>{{localize "twdu.finishDate"}}: </b>{{system.finishDate}}</br>
        <b> {{localize "twdu.requirements"}}</b></br>
        <b>{{localize "twdu.workforce"}} : </b>{{system.requirements.workforce}}</br>
        <b>{{localize "twdu.tech"}} : </b>{{system.requirements.tech}}</br>
        <b>{{localize "twdu.items"}}</b>: {{system.requirements.items}}</br>
    </div>
    <div class='description'>{{system.description}} </div>
</div>