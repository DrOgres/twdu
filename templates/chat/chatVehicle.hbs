<div class="card-holder flex-row w-100" style="position: relative;">
    <div class="roll-token">
        <img src={{token}} width="45" class="roll-token" />
    </div>
    <div class='chat-flavor'> {{name}} </div>
    <div class='flex-row center'>
        <img src={{img}} width=50 height=50 />
    </div>
    <div class='chat-item-info grid two-col'>
        <b>{{localize "twdu.maneuverability"}}: </b>{{system.maneuverability}}</br>
        <b>{{localize "twdu.armor"}}: </b>{{system.armor}}</br>
        <b>{{localize "twdu.damage"}}: </b>{{system.damage}}</br>
        <b>{{localize "twdu.hull"}}: </b>{{system.hull}}</br>
        <b>{{localize "twdu.issue"}}: </b>{{system.issue}}</br>

    </div>
</div>