<p class='item-desc'>
    <b>{{localize "twdu.lethal"}}: </b>{{#if (eq system.fatal 'true')}}
    {{localize "twdu.yes"}}
    {{/if}}
    {{#unless (eq system.fatal 'true')}}
    {{localize "twdu.no"}}
    {{/unless}}
    </br>
    <b>{{localize "twdu.timeLimit"}}:</b> {{localize system.timeLimit}} ( {{system.complexity}} )</br>

    <b>{{localize "twdu.recoveryTime"}}:</b> {{localize system.recovery}} </br>
    <b>{{localize "twdu.penalty"}}: </b>{{system.effect}} </br>

<div class='chat-item-info grid two-col'>
    <b>{{localize "twdu.description"}}: </b>{{system.description}}</br>
</div>
</p>